<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/small_control_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/play_control_bar"
        android:orientation="horizontal"
        android:padding="@dimen/play_pause_padding">

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

        <ImageView
            android:id="@+id/btn_big_play"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/big_pause_btn" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/play_control_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ab000000"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_small_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/small_pause_btn" />

        <TextView
            android:id="@+id/current_time"
            style="@style/time_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_time" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="13dip"
            android:paddingRight="13dip"
            android:progressDrawable="@drawable/seekbar_progress_drawable"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:id="@+id/total_time"
            style="@style/time_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_time" />

        <ImageView
            android:id="@+id/btn_full_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/full_screen_bg" />
    </LinearLayout>

</RelativeLayout>